@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";

    var contactsImagemap = Model?.Value<IPublishedContent>("contactsImagemap")?.Url() ?? "default-image-url";

}


<!-------baner/section-------->
<section class="page-top bg-gray">
    <h1>Contact Us</h1>
    <div class="breadcrumbs">
        <a href="/">Home</a>
        <i class="fa-solid fa-chevron-right"></i>
        <a class="active" href="#">Contact</a>
    </div>
</section>



<!-------partial-contactinfo-------->



<section class="map">
    <div class="img-container">
        <img src="@contactsImagemap" alt="Map">
        <div class="overlay"></div>
    </div>
</section>
<section class="contact-form">
    <div class="container bg-light">
        <h6>@Model?.Value("contact01")</h6>
        <h2>@Model?.Value("contact02")</h2>
        <p>@Model?.Value("contact03")</p>
        <form method="get" novalidate>
            <div class="grid">
                <input type="text" id="name" name="name" placeholder="Name">
                <input type="email" id="email" name="email" placeholder="Email address">
                <input type="text" id="phone" name="phone" placeholder="Phone">
                <select name="service" id="service">
                    <option value="1">@Model?.Value("contact04")</option>
                </select>
            </div>
            <button class="btn btn-primary" type="submit">@Model?.Value("contact05")</button>
        </form>
    </div>
</section>

